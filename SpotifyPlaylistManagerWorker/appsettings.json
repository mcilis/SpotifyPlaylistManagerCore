{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
         "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\_APPDATA\\SpotifyPlaylistManagerCore\\SpotifyPlaylistManagerWorker.log",
          "outputTemplate": "{Timestamp:G} {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\_APPDATA\\SpotifyPlaylistManagerCore\\SpotifyPlaylistManagerWorker.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ] 
  }
}
